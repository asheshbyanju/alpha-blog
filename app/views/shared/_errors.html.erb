<% if obj.errors.any? %>
  <div class="row">
    <div class="clo-sx-8 offset-sm-2">
      <div class="card text-danger">
        <div class="card-heading">
          <h2 class="card-title">
            <%= pluralize(obj.errors.count, "error") %>
            prohibited this article from being saved:
          </h2>
          <div class="card-body">
            <ul>
              <% obj.errors.full_messages.each do |msg| %>
                <li><%= msg %></li> 
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>